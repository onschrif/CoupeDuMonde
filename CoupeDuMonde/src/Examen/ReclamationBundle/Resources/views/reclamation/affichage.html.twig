<html>

<body>

<h3>Liste des Réclamations</h3>
<table border="2">

    <th>Matricule</th>
    <th>Nom</th>
    <th>Prénom</th>
    <th>Classe</th>
    <th>Enseignant</th>
    <th>Motif</th>
    <th>Statut</th>
    <th>Traiter</th>

    {% for reclamation in Reclamations %}

        <tr>
            <td>{{ reclamation.matricule }}</td>
            <td>{{ reclamation.nom }}</td>
            <td>{{ reclamation.prenom }}</td>
            <td>{{ reclamation.classe.libelle }}</td>
            <td>{{ reclamation.enseignant }}</td>
            <td>{{ reclamation.motif }}</td>
            <td>{{ reclamation.statut }}</td>
            <td>
                <a href="{{ path('TraiterReclamation',{'id':reclamation.matricule}) }}"><span>Traiter</span></a>

            </td>

        </tr>

    {% endfor %}
</table>

</body>
</html>